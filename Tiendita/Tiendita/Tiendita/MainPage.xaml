<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tiendita.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Inicio de sesión" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Ingresa tus datos" FontSize="Title" Padding="10"/>
        <Entry Text="{Binding Correo}"/>
        <Entry IsPassword="true" Text="{Binding Password}"/>
        <Button Text="Login" Command="{Binding LoginCommand}"></Button>
        <Label Text="{Binding JsonResult}"></Label>

        <Button Text="Registrar" Command="{Binding RegisterCommand}"></Button>
    </StackLayout>

</ContentPage>
