<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tiendita.View.Register">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Ingresa tus datos" FontSize="Title" Padding="10"/>
            <Entry Text="{Binding Nombre}"/>
            <Entry Text="{Binding Apellidos}"/>
            <Entry Text="{Binding Correo}"/>
            <Entry Text="{Binding Direccion}"/>
            <Entry Text="{Binding Telefono}"/>
            <Entry IsPassword="true" Text="{Binding Password}"/>
            <Button Text="Registrarse" Command="{Binding RegisterCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>